#include <stdio.h>

float somaf(float num1, float num2) {
    return num1 + num2;
}

float subtracaof(float num1, float num2) {
    return num1 - num2;
}

float multiplicacaof(float num1, float num2) {
    return num1 * num2;
}

float divisaof(float num1, float num2) {
    if (num2 == 0) {
        printf("Não é possível realizar uma divisão por zero!\n");
        return 0;
    } else {
        return num1 / num2;
    }
}

float potenciaf(float num1, float num2) {
    float resultado = 1; // Inicializando resultado como 1 para a multiplicação
    for (int i = 0; i < num2; i++) {
        resultado *= num1;
    }
    return resultado;
}

float porcentagemf(float num1, float num2) {
    return (num1 * num2) / 100;
}

int main() {
    float num1, num2, resultado;
    char operador;
    char igual;
    
    
    printf("Digite um número: ");
    scanf("%f", &num1);

    printf("\nEscolha um dos operadores lógicos para efetuar a operação:");
    printf("\n[+] - Soma");
    printf("\n[-] - Subtração");
    printf("\n[*] - Multiplicação");
    printf("\n[/] - Divisão");
    printf("\n[^] - Potência");
    printf("\n[%%] - Porcentagem");
    
    printf("\n\nInsira aqui o operador: ");
    scanf(" %c", &operador); 
    
    printf("\nInsira aqui o segundo número: ");
    scanf("%f", &num2);

    switch (operador) {
        case '+':
            resultado = somaf(num1, num2);
            break;
        case '-':
            resultado = subtracaof(num1, num2);
            break;
        case '*':
            resultado = multiplicacaof(num1, num2);
            break;
        case '/':
            resultado = divisaof(num1, num2);
            break;
        case '^':
            resultado = potenciaf(num1, num2);
            break;
        case '%':
            resultado = porcentagemf(num1, num2);
            break;
        default:
            printf("\nO operador digitado não condiz com a opção. Tente novamente!\n");
            return 0;
    }
    printf("\n\nA operação é: %.2f %c %.2f = %.2f\n", num1, operador, num2, resultado);
    
    
    return 0;
}
